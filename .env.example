# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/academic_management_db
PGDATABASE=academic_management_db
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password

# Authentication
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# AI Services (Optional - fallbacks available)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_KEY_ENV_VAR=sk-alternative-env-var-name

# Application Configuration
NODE_ENV=development
PORT=5000

# File Upload Configuration (Optional)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,zip,rar

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (Optional - for production caching)
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRY=24h
CORS_ORIGIN=http://localhost:5000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration
AI_RECOMMENDATION_CACHE_TTL=3600
AI_SYLLABUS_CACHE_TTL=7200
AI_MAX_RETRIES=3
AI_TIMEOUT=30000

# Development Tools
VITE_API_URL=http://localhost:5000/api
REPLIT_DOMAINS=your-replit-domain.repl.co

# Production Deployment (when applicable)
DATABASE_SSL=true
TRUST_PROXY=true
SECURE_COOKIES=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Backup Configuration (Optional)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Feature Flags (Optional)
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_REAL_TIME_NOTIFICATIONS=false

# Academic Year Configuration
CURRENT_ACADEMIC_YEAR=2024-2025
SEMESTER_START_DATE=2024-09-01
SEMESTER_END_DATE=2024-12-15

# Grading Configuration
DEFAULT_GRADE_SCALE=100
PASSING_GRADE=60
GPA_SCALE=4.0

# Course Configuration
MAX_ENROLLMENT_PER_COURSE=50
MIN_ENROLLMENT_PER_COURSE=5
MAX_COURSES_PER_STUDENT=8
MAX_COURSES_PER_LECTURER=6

# Assignment Configuration
DEFAULT_ASSIGNMENT_WEIGHT=10
MAX_ASSIGNMENT_WEIGHT=50
LATE_SUBMISSION_PENALTY=10
ASSIGNMENT_DUE_REMINDER_DAYS=3
